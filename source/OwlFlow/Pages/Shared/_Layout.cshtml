<!DOCTYPE html>
<html lang="en" class="bg-gray-900 text-white">
<head>
    <meta charset="UTF-8" />
    <title>OwlFlow</title>
    <link rel="shortcut icon" href="/images/favicon.ico" type="image/x-icon">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="flex h-screen font-sans">

    <!-- Sidebar -->
    <aside class="w-64 bg-gray-800 p-6 flex flex-col justify-between">
        <div>
            <div class="flex items-center space-x-3 mb-10">
                <img src="/images/owlflow-logo.png" alt="OwlFlow Logo" class="w-8 h-8" />
                <h1 class="text-2xl font-bold">Admin panel</h1>
            </div>
            <nav class="space-y-2">
                <a asp-page="Index" class="flex items-center space-x-2 hover:bg-gray-700 px-4 py-2 rounded">
                    <span>📁</span>
                    <span>Dashboard</span>
                </a>
                <a asp-page="InfoServers" class="flex items-center space-x-2 hover:bg-gray-700 px-4 py-2 rounded">
                    <span>📊</span>
                    <span>Servers</span>
                </a>
            </nav>
        </div>
    </aside>
    <a asp-page="Logout" 
    class="absolute bottom-4 right-4 bg-red-600 hover:bg-red-500 text-white px-4 py-2 rounded shadow-lg transition duration-200">
        🚪 Logout
    </a>

    @RenderBody()

</body>
</html>
